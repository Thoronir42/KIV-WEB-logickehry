{# sprava/stoly.twig #}

{% extends layout %}

{% block bodyContent %}
	<div class="panel panel-default">
		<div class="panel-heading">Správa rezervovatelných stolů</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-md-offset-3 col-md-6">
					<form action="action" class="form-inline">
						<span class="input-group">
							<div class="form-group">
								<input type="number" name="table_number" placeholder="Číslo stolu" class="form-control">
							</div>
							<div class="form-group">    
								<input type="number" name="capacity" placeholder="Počet míst" class="form-control">
							</div>

							<span class="input-group-btn">
								<input type="submit" value="Přidat" class="btn btn-primary">
							</span>
						</span>
					</form>
				</div>
			</div>
			<br/>
			<form >
				<div class="row">
					{% for desk in desks %}
						<div class="col-md-4">
							<span class="input-group">
								<span class="input-group-addon">
									{{ desk.desk_number }}
								</span>
								<input type="text" name="capacity" class="form-control" value="{{ desk.capacity }}">
								<span class="input-group-addon">
									<input type="checkbox" value="desk_enabled" class="btn btn-danger" {% if desk.is_enabled %} checked {% endif %}>
								</span>
							</span>
						</div>
					{% endfor %}
					<div class="col-xs-12">
						<br/>
						<input type="submit" class="btn btn-primary" value="Uložit vše">
					</div>
				</div>
			</form>
		</div>
		<div class="panel-footer">
			Počet rezervovatelných stolů: {{ desks|length }}
		</div>
	</div>
{% endblock%}
