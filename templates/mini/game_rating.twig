{# mini/game_rating.twig #}
<blockquote>
	{% if r.hasReview %}
		<p>
			{{ r.review }}
			<br/>
			{% if r.hasScore %}
				<span class="label label-warning">{{ "%d/%d"|format(r.score, ratings['max_score']) }}</span>
			{% endif %}
		</p>
		<footer>
			{%if link == 'user' and user.isLoggedIn %}
				<a href="{{ urlgen.uProfile(r.orion_login) }}">{{ r.getFullUserName() }}</a>
			{% else %}
				{{ r.getFullUserName }}
			{% endif %}
			na hru
			{% if link == 'game' %}
				<a href="{{ urlgen.gDet(r.game_type_id) }}">{{ r.game_name }} <i>{{ r.game_subtitle }}</i></a>
			{% else %}
				{{ r.game_name }} <i>{{ r.game_subtitle }}</i>
			{% endif%}
		</footer>
	{% else %}
		Hodnocení uživatele {%if link == 'user' and user.isLoggedIn %}
		<a href="{{ urlgen.uProfile(r.orion_login) }}">{{ r.getFullUserName() }}</a>
	{% else %}
		{{ r.getFullUserName }}
	{% endif %}
	na hru
	{% if link == 'game' %}
		<a href="{{ urlgen.gDet(r.game_type_id) }}">{{ r.game_name }} <i>{{ r.game_subtitle }}</i></a>
	{% else %}
		{{ r.game_name }} <i>{{ r.game_subtitle }}</i>
	{% endif%}
	:
	<span class="label label-warning">{{ "%d/%d"|format(r.score, ratings['max_score']) }}</span>
	{% endif %}
	</blockquote>
