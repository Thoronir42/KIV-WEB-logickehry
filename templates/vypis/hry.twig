{# vypis/hry #}

{% extends layout %}

{% block bodyContent %}
	<div>
	{% for g in hry %}
		<div class="game panel panel-default">
			<div class="panel-heading">
				<span class="game-title pull-left">
					{{ g.game_name }}
				</span>
				<span class="image-frame pull-right">
					<img src="{{ g.picture_path }}" class="img-rounded img-responsive">
				</span>
			</div>
			<div class="panel-body">
				<ul class="list-group">
					<li class="list-group-item">
						Hráčů:{{ "%d - %d"|format(g.min_players, g.max_players) }}
					</li>
					<li class="list-group-item">
						Prům. Doba Hry: {{ g.avg_playtime }}
					</li>
					<li class="list-group-item">
						Hodnocení:{% if g.rating_count %}
							{{ '%d (%d)'|format(g.average_score, g.rating_count) }}
							{% else %}
								Zatím nehodnoceno
							{% endif %}
					</li>
					<li class="list-group-item">
						Odběratelů: {{ g.subscribed_users }}
					</li>
				</ul>
			</div>

		</div>
	{% endfor %}
	</div>
{% endblock %}